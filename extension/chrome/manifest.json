{
  "manifest_version": 2,

  "name": "Hypixel Alerts",
  "description": "Extension for better notifications on the Hypixel Forums.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "pics/forum-alerts-icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "background",
    "storage",
    "notifications",
	"https://*.bugg.co/",
	"https://hypixel.net/"
  ],
  "background": {
    "scripts": ["vendor/jquery-3.2.1.min.js","background.js"]
  }
}